doctype html
html(lang="en")
head
  meta(charset="UTF-8")
  meta(http-equiv="X-UA-Compatible" content="IE=edge")
  meta(name="viewport" content="width=device-width, initial-scale=1.0")
  title Atlassian
  link(href="https://cdnjs.cloudflare.com/ajax/libs/Swiper/4.4.6/css/swiper.min.css" rel="stylesheet")
  link(rel="stylesheet" href="../style/style.css")
  script(src="https://cdnjs.cloudflare.com/ajax/libs/Swiper/4.4.6/js/swiper.min.js")
  script(defer src="../scripts/main.js")
body 
  header.header 
    .container 
      .header__inner 
        a.header__link(href="#")
          img.header__img(src="../img/logo.svg" alt="Logo")
        nav.header__nav 
          - var items = [{title: 'Home'},{title: 'Blog'},{title: 'Features'},{title: 'Pricing'},{title: 'Documentation'}]
          ul.header__nav-list
            each item in items
              li.header__nav-item 
                a.header__nav-link(href="#")= item.title
        - var mediaItems = [{class: 'facebook-icon'},{class: 'telegram-icon'},{class: 'twitter-icon'},{class: 'media-icon'}]
        ul.header__media 
          each mediaItem in mediaItems 
            li.header__media-item 
              a.header__media-link(href="#")

